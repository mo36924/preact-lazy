{
  "name": "@mo36924/preact-lazy",
  "version": "1.0.0",
  "description": "preact-lazy",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/mo36924/preact-lazy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mo36924/preact-lazy.git"
  },
  "bugs": {
    "url": "https://github.com/mo36924/preact-lazy/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.browser.js",
  "exports": {
    ".": {
      "browser": "./dist/index.browser.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "run-s clean test lint format bundle",
    "bundle": "rollup -c",
    "dev": "rollup -cw",
    "clean": "del dist",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts,.tsx --fix .",
    "test": "jest --passWithNoTests"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/dist/"
    ],
    "rules": {
      "no-var": "error",
      "import/no-absolute-path": "error",
      "import/no-dynamic-require": "error",
      "import/no-webpack-loader-syntax": "error",
      "import/no-self-import": "error",
      "import/no-useless-path-segments": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "padding-line-between-statements": [
        "warn",
        {
          "blankLine": "always",
          "prev": "import",
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": "import",
          "next": "import"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "export"
        },
        {
          "blankLine": "any",
          "prev": "export",
          "next": "export"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ]
        },
        {
          "blankLine": "always",
          "prev": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ],
          "next": "*"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "snapshotSerializers": [
      "@mo36924/jest-snapshot-serializer-babel"
    ]
  },
  "devDependencies": {
    "@mo36924/jest-snapshot-serializer-babel": "^1.0.0",
    "@mo36924/preact-hooks": "^1.0.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@typescript-eslint/parser": "^4.13.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.12",
    "prettier": "^2.2.1",
    "rollup": "^2.38.0",
    "rollup-plugin-dts": "^2.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@mo36924/preact-hooks": "^1.0.0",
    "preact": "^10.5.12"
  }
}
